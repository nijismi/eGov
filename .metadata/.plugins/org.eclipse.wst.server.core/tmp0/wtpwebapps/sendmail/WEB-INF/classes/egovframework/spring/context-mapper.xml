<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<!-- SqlSession setup for MyBatis Database Layer -->
	<bean id="sqlSession" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="configLocation" value="classpath:/egovframework/sqlmap/example/sql-mapper-config.xml" />
		<property name="mapperLocations" value="classpath:/egovframework/sqlmap/example/mappers/Mail_SQL.xml" />
	</bean>
		<!-- MapperConfigurer setup for MyBatis Database Layer with @Mapper("deptMapper") in DeptMapper Interface -->
 	<bean class="egovframework.rte.psl.dataaccess.mapper.MapperConfigurer">
	<!-- 
				<No bean named 'boardMapper' available 애러처리>
			 	basePackage는 하나만 하므로 아래처럼 정규식 써서 함
	-->
		<property name="basePackage" value="egovframework.example.**.service.impl" />
		<property name="sqlSessionFactoryBeanName" value="sqlSession"/>											<!-- 추가한 부분 -->
	</bean>
	
	<!-- MariaDB 각 개인 db와 MailVO, sql연결 -->
	<bean id="sqlSession2" class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource2" />
		<property name="configLocation" value="classpath:/egovframework/sqlmap/example/sql-mapper-config.xml" />
		<property name="mapperLocations" value="classpath:/egovframework/sqlmap/example/mappers/Mail_SQL2.xml" />
	</bean>
	 	<bean class="egovframework.rte.psl.dataaccess.mapper.MapperConfigurer">
		<property name="basePackage" value="egovframework.example.**.service.impl2" />    <!-- 매퍼interface가 있는 풀 페키지명 -->
		<property name="sqlSessionFactoryBeanName" value="sqlSession2"/>											
	</bean>

    
</beans>